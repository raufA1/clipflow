# ClipFlow Configuration Example
# Copy this file to .env and fill in your actual values

# Required: Telegram Bot Token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# YouTube API Credentials (Optional)
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret
YOUTUBE_ACCESS_TOKEN=your_youtube_access_token

# Instagram API Credentials (Optional)
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret

# TikTok API Credentials (Optional)
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token

# Twitter API Credentials (Optional - Future Implementation)
# TWITTER_API_KEY=your_twitter_api_key
# TWITTER_API_SECRET=your_twitter_api_secret
# TWITTER_ACCESS_TOKEN=your_twitter_access_token
# TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# LinkedIn API Credentials (Optional - Future Implementation)  
# LINKEDIN_CLIENT_ID=your_linkedin_client_id
# LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
# LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# Application Settings
CLIPFLOW_TIMEZONE=Asia/Baku
CLIPFLOW_USE_ENV=true
LOG_LEVEL=INFO

# Database Settings (Optional - for PostgreSQL)
# DB_PASSWORD=your_secure_database_password
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=clipflow
# DB_USER=clipflow

# Brand Configuration (Optional)
BRAND_NAME=ClipFlow
BRAND_PRIMARY_COLOR=#1DA1F2
BRAND_SECONDARY_COLOR=#14171A
BRAND_WATERMARK=Created with ClipFlow

# Deployment Settings (for CI/CD)
# DEPLOY_HOST=your.server.com
# DEPLOY_USER=clipflow
# DEPLOY_PORT=22
# SLACK_WEBHOOK=https://hooks.slack.com/your/webhook/url